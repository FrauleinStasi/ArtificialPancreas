<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- Основные кнопки управления -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/menuButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Параметры"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/bgInputButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ввести BG"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Панель эмуляции -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_gray"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Режим эмуляции"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/startSimulation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Старт"
                    android:backgroundTint="@color/green"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/stopSimulation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Стоп"
                    android:backgroundTint="@color/red"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статус: "
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/simulatorStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Не активен"
                    android:textColor="@color/green"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Время: "
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/currentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- График глюкозы -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"/>

        <!-- Основные функции -->
        <Button
            android:id="@+id/forecastButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Прогноз"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/bolusCalculationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Расчет болюса"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/addBolusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить болюс"
            android:layout_marginTop="8dp"/>

        <!-- Предупреждения -->
        <TextView
            android:id="@+id/hypoglycemiaTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginTop="8dp"/>

        <!-- Панель текущих параметров -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_gray"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Текущие параметры"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Время инсулина (ч):"/>
                    <TextView
                        android:id="@+id/tinsulinValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="--"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Текущий BG:"/>
                    <TextView
                        android:id="@+id/currentBGValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="--"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Актив. инсулин (IOB):"/>
                    <TextView
                        android:id="@+id/iobValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="0.0"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Целевой BG:"/>
                    <TextView
                        android:id="@+id/targetBGValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="--"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Чувств. (ISF):"/>
                    <TextView
                        android:id="@+id/isfValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="--"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Углевод. коэф. (IC):"/>
                    <TextView
                        android:id="@+id/icRatioValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="--"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Последний болюс:"/>
                    <TextView
                        android:id="@+id/bolusValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="0.0"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Время болюса:"/>
                    <TextView
                        android:id="@+id/tbolusValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="--"/>
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>